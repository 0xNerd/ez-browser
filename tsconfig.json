{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": [
    "popup/**/*",
    "background/**/*",
    "content/**/*",
    "src/**/*",
    "agent/**/*",
  ]
} 